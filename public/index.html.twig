{% extends 'base.html.twig' %}

{% block title %}Hello LuckyController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
   <div class="elementor-widget-container"><h2
            class="elementor-heading-title elementor-size-xl">Upcoming
        Events</h2></div>


{% for entity in File  %}


    <tr>{{  entity.getTitre() }}</tr>
    ||
    <tr>{{  entity.getFormat()}}</tr>


    <a  href="{{ path('doc_del',{'id':entity.getId()})}}">
        <button type="button" class="btn btn-outline-danger waves-effect waves-light m-1">
            Supprimer</button></a>
    <br>


{% endfor %}
<a  href="{{ path('doc_add')}}">
        <button type="button" class="btn btn-outline-danger waves-effect waves-light m-1">
            Ajouter</button></a>
    <br>
</div>
{% endblock %}
